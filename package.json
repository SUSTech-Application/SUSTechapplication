{
  "name": "sustechapplication",
  "type": "module",
  "scripts": {
    "build": "./scripts/bracket-routes-fix.sh && vitepress build src",
    "clean": "rm -rf dist cache && find content -name \"*.paths.js\" -delete",
    "dev": "vitepress dev src",
    "format": "prettier -c .",
    "format:fix": "prettier -w .",
    "lint": "bun run lint:es && bun run lint:md",
    "lint:es": "eslint",
    "lint:es:fix": "eslint --fix",
    "lint:md": "markdownlint-cli2 \"**.md\"",
    "lint:md:fix": "bun run lint -- --fix",
    "preview": "vitepress preview src",
    "sort": "bunx sort-package-json",
    "spellcheck": "cspell .",
    "test": "vitest"
  },
  "dependencies": {
    "@primeuix/themes": "^1.2.3",
    "primevue": "^4.3.7"
  },
  "devDependencies": {
    "@modyfi/vite-plugin-yaml": "^1.1.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/ajv": "^1.0.4",
    "@types/node": "^24.3.0",
    "@vue/tsconfig": "^0.8.0",
    "ajv": "^8.17.1",
    "cspell": "^9.2.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.4.0",
    "jiti": "^2.5.1",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "prettier-plugin-sh": "^0.18.0",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4",
    "zod": "^4.0.17"
  }
}
